# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_password
DATABASE_NAME=clinic_db

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@clinic.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# AI Recommendation Configuration
AI_RECOMMENDATION_DEDUPE_DAYS=14
AI_MAX_TOKENS=1200
AI_CACHE_TTL_SECONDS=300
AI_SEMANTIC_SIMILARITY_THRESHOLD=0.9

# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Frontend URLs
FRONTEND_URL=http://localhost:3000
ADMIN_FRONTEND_URL=http://localhost:3002

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_LIMIT=100

# Umami Analytics Configuration
UMAMI_ENABLED=false
UMAMI_WEBSITE_ID=your_umami_website_id
UMAMI_API_URL=https://your-umami-instance.com/api/collect

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret
COOKIE_SECRET=your_cookie_secret

# Environment
NODE_ENV=development
PORT=3001

# Cookie Configuration
COOKIE_DOMAIN=  # Leave empty for development to allow cross-machine access

# Elasticsearch Configuration
ELASTICSEARCH_ENABLED=false
ELASTICSEARCH_NODES=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_API_KEY=
ELASTICSEARCH_TLS=false
ELASTICSEARCH_CA=
ELASTICSEARCH_REJECT_UNAUTHORIZED=true
ELASTICSEARCH_MAX_RETRIES=3
ELASTICSEARCH_REQUEST_TIMEOUT=30000
ELASTICSEARCH_PING_TIMEOUT=3000
ELASTICSEARCH_SNIFF_ON_START=false
ELASTICSEARCH_SNIFF_INTERVAL=60000
ELASTICSEARCH_SNIFF_ON_CONNECTION_FAULT=false
