# Production Environment Configuration
# Copy this file to config.env.production and fill in your production values

# Application
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://your-frontend-domain.com

# Database Configuration
DB_HOST=your-production-db-host
DB_PORT=5432
DB_USERNAME=your-db-username
DB_PASSWORD=your-secure-db-password
DB_DATABASE=borzolini_production
DB_SSL=true

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long
JWT_EXPIRES_IN=30m
JWT_REFRESH_EXPIRES_IN=7d

# Bcrypt Configuration
BCRYPT_ROUNDS=12

# Email Configuration
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@your-domain.com

# SMS Configuration
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Supabase Configuration (if using Supabase)
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# AI Recommendation Configuration
AI_RECOMMENDATION_DEDUPE_DAYS=14
AI_MAX_TOKENS=1200
AI_CACHE_TTL_SECONDS=300
AI_SEMANTIC_SIMILARITY_THRESHOLD=0.9

# RAG (Retrieval-Augmented Generation) Configuration
AI_RAG_ENABLED=true
AI_RAG_TOP_K=5

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Security
HELMET_ENABLED=true
CORS_ORIGIN=https://your-frontend-domain.com
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100
AUTH_RATE_LIMIT_LIMIT=10
ADMIN_RATE_LIMIT_LIMIT=50

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Health Checks
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
